<% provide(:title, "All Posts") %>

<h2>All posts</h2>

<%= will_paginate %>
<table class="table">
  <thead>
    <tr>
      <th>Post</th>
      <th>Blog</th>
      <th>Age</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |x| %>
      <tr>
        <td>
          <%= link_to x.title, x %>
        </td>
        <td>
          <%= x.blog.name %>
        </td>
        <td>
          <%= time_ago_in_words(x.created_at) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
